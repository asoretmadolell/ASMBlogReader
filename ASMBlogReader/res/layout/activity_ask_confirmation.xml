<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/IDV_BACKGROUND"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/color_alert_background"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/IDV_QUESTION_TEXTVIEW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/black"
            />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/IDV_QUESTION_TEXTVIEW"
               style="?android:attr/buttonBarStyle"
            >
            <Button 
                android:id="@+id/IDV_CANCEL_BUTTON"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/IDS_CANCEL"
                android:textColor="@android:color/black"
                style="?android:attr/buttonBarButtonStyle"
               />
            <Button 
                android:id="@+id/IDV_ACCEPT_BUTTON"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/IDS_ACCEPT"
                android:textColor="@android:color/black"
                style="?android:attr/buttonBarButtonStyle"
               />
            
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>